<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="@color/white">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="24dp">

        <TextView
            android:id="@+id/txt_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Adicionar Disciplina"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:fontFamily="@font/alexandria"/>

        <TextView
            android:id="@+id/lbl_nome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nome"
            android:textColor="@color/studynest_purple"
            android:textStyle="bold"
            android:layout_marginTop="32dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/txt_title"
            android:fontFamily="@font/alexandria"/>

        <EditText
            android:id="@+id/edt_nome"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="Ex: Redes de Computadores"
            android:background="@drawable/bg_input_rounded"
            android:paddingHorizontal="12dp"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@id/lbl_nome"
            android:fontFamily="@font/alexandria"/>

        <TextView
            android:id="@+id/lbl_codigo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Código da Disciplina"
            android:textColor="@color/studynest_purple"
            android:textStyle="bold"
            android:layout_marginTop="16dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/edt_nome"
            android:fontFamily="@font/alexandria"/>

        <EditText
            android:id="@+id/edt_codigo"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="Ex: E0054"
            android:background="@drawable/bg_input_rounded"
            android:paddingHorizontal="12dp"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@id/lbl_codigo"
            android:fontFamily="@font/alexandria"/>

        <TextView
            android:id="@+id/lbl_area"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Área de Conhecimento"
            android:textColor="@color/studynest_purple"
            android:textStyle="bold"
            android:layout_marginTop="16dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/edt_codigo"
            android:fontFamily="@font/alexandria"/>

        <EditText
            android:id="@+id/edt_area"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="Ex: Ciências Exatas"
            android:background="@drawable/bg_input_rounded"
            android:paddingHorizontal="12dp"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@id/lbl_area"
            android:fontFamily="@font/alexandria"/>

        <TextView
            android:id="@+id/lbl_descricao"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Descrição"
            android:textColor="@color/studynest_purple"
            android:textStyle="bold"
            android:layout_marginTop="16dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/edt_area"
            android:fontFamily="@font/alexandria"/>

        <EditText
            android:id="@+id/edt_descricao"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:gravity="top|start"
            android:padding="12dp"
            android:hint="Descreva a disciplina..."
            android:background="@drawable/bg_input_rounded"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@id/lbl_descricao"
            android:fontFamily="@font/alexandria"/>

        <Button
            android:id="@+id/btn_enviar"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:text="Enviar"
            android:backgroundTint="@color/studynest_purple"
            android:textColor="@color/white"
            android:layout_marginTop="32dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/edt_descricao"
            android:fontFamily="@font/alexandria"/>

        <ProgressBar
            android:id="@+id/progress_bar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:indeterminateTint="@color/studynest_purple"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/btn_enviar" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>