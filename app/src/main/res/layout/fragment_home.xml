<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="24dp"
    android:background="@color/white">

    <TextView
        android:id="@+id/txt_welcome_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Bem-Vindo, Fulano!"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:layout_marginTop="32dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:fontFamily="@font/alexandria"/>

    <TextView
        android:id="@+id/txt_dicas_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Dicas"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="@color/studynest_purple"
        android:layout_marginTop="40dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/txt_welcome_title"
        android:fontFamily="@font/alexandria"/>

    <View
        android:layout_width="50dp"
        android:layout_height="2dp"
        android:background="@color/studynest_purple"
        app:layout_constraintStart_toStartOf="@id/txt_dicas_label"
        app:layout_constraintTop_toBottomOf="@id/txt_dicas_label" />

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/card_material"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        app:cardCornerRadius="12dp"
        app:cardElevation="4dp"
        app:strokeColor="#E0E0E0"
        app:strokeWidth="1dp"
        app:layout_constraintTop_toBottomOf="@id/txt_dicas_label">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Material"
                android:textStyle="bold"
                android:textSize="16sp"
                android:textColor="@color/black"
                android:fontFamily="@font/alexandria"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Para acessar ou criar um material é preciso estar inscrito na disciplina."
                android:layout_marginTop="8dp"
                android:textSize="14sp"
                android:textColor="#757575"
                android:fontFamily="@font/alexandria"/>
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/card_disciplinas"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        app:cardCornerRadius="12dp"
        app:cardElevation="4dp"
        app:strokeColor="#E0E0E0"
        app:strokeWidth="1dp"
        app:layout_constraintTop_toBottomOf="@id/card_material">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Disciplinas"
                android:textStyle="bold"
                android:textSize="16sp"
                android:textColor="@color/black"
                android:fontFamily="@font/alexandria"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Disciplinas podem conter o mesmo nome, mas têm códigos diferentes."
                android:layout_marginTop="8dp"
                android:textSize="14sp"
                android:textColor="#757575"
                android:fontFamily="@font/alexandria"/>
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_logout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Sair"
        android:layout_marginTop="32dp"
        android:backgroundTint="@color/studynest_purple"
        android:textColor="@color/white"
        app:cornerRadius="12dp"
        android:fontFamily="@font/alexandria"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/card_disciplinas"/>


</androidx.constraintlayout.widget.ConstraintLayout>