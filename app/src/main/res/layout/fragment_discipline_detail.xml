<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="@color/white">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="24dp">

        <ImageButton
            android:id="@+id/btn_back"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@drawable/ic_arrow_back"
            android:scaleType="centerInside"
            app:tint="@color/black"
            android:contentDescription="Voltar"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/txt_detail_nome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Engenharia de Software I"
            android:textSize="22sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:gravity="center"
            app:layout_constraintTop_toBottomOf="@+id/btn_back"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:fontFamily="@font/alexandria_bold"/>

        <TextView
            android:id="@+id/txt_detail_codigo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="E1131"
            android:textSize="16sp"
            android:textColor="#757575"
            android:layout_marginTop="4dp"
            app:layout_constraintTop_toBottomOf="@id/txt_detail_nome"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:fontFamily="@font/alexandria"/>

        <TextView
            android:id="@+id/txt_detail_descricao"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="DescriÃ§Ã£o..."
            android:textSize="14sp"
            android:textColor="#424242"
            android:lineSpacingExtra="4dp"
            android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@id/txt_detail_codigo"
            android:fontFamily="@font/alexandria"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_favoritar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Favoritar"
            android:backgroundTint="#F0F0F0"
            android:textColor="@color/studynest_purple"
            android:layout_marginTop="24dp"
            app:icon="@drawable/ic_bookmark"
            app:iconTint="@color/studynest_purple"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/txt_detail_descricao"
            android:fontFamily="@font/alexandria"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@id/btn_favoritar">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Dashboard"
                android:textStyle="bold"
                android:textColor="#9E9E9E"
                android:layout_marginBottom="16dp"
                android:fontFamily="@font/alexandria"/>

            <LinearLayout
                android:id="@+id/btn_materiais"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@drawable/bg_input_rounded"
                android:padding="16dp"
                android:gravity="center_vertical"
                android:clickable="true"
                android:focusable="true"
                android:layout_marginBottom="12dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="ðŸ“‚  Materiais"
                    android:textSize="16sp"
                    android:textColor="@color/black"
                    android:fontFamily="@font/alexandria"/>

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_arrow_forward"
                    app:tint="@color/black"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/btn_add_material"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@drawable/bg_input_rounded"
                android:padding="16dp"
                android:gravity="center_vertical"
                android:clickable="true"
                android:focusable="true"
                android:layout_marginBottom="12dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="âž•  Adicionar Materiais"
                    android:textSize="16sp"
                    android:textColor="@color/black"
                    android:fontFamily="@font/alexandria"/>

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_arrow_forward"
                    app:tint="@color/black"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/btn_chat"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@drawable/bg_input_rounded"
                android:padding="16dp"
                android:gravity="center_vertical"
                android:clickable="true"
                android:focusable="true">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="ðŸ’¬  Chat da Disciplina"
                    android:textSize="16sp"
                    android:textColor="@color/black"
                    android:fontFamily="@font/alexandria"/>

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_arrow_forward"
                    app:tint="@color/black"/>
            </LinearLayout>

        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>