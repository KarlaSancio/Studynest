<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/splashFragment">

    <fragment
        android:id="@+id/splashFragment"
        android:name="com.example.studynest.ui.SplashFragment"
        tools:layout="@layout/fragment_splash">
        <action
            android:id="@+id/action_splash_to_login"
            app:destination="@id/loginFragment"
            app:popUpTo="@id/splashFragment"
            app:popUpToInclusive="true"/>
        <action
            android:id="@+id/action_splash_to_home"
            app:destination="@id/homeFragment"
            app:popUpTo="@id/splashFragment"
            app:popUpToInclusive="true"/>
    </fragment>

    <fragment
        android:id="@+id/loginFragment"
        android:name="com.example.studynest.ui.LoginFragment"
        tools:layout="@layout/fragment_login">
        <action
            android:id="@+id/action_login_to_home"
            app:destination="@id/homeFragment"
            app:popUpTo="@id/loginFragment"
            app:popUpToInclusive="true"/>
        <action
            android:id="@+id/action_login_to_register"
            app:destination="@id/registerFragment"/>
    </fragment>

    <fragment
        android:id="@+id/registerFragment"
        android:name="com.example.studynest.ui.RegisterFragment"
        tools:layout="@layout/fragment_register">
        <action
            android:id="@+id/action_register_to_home"
            app:destination="@id/homeFragment"
            app:popUpTo="@id/loginFragment"
            app:popUpToInclusive="true"/>
        <action
            android:id="@+id/action_register_to_login"
            app:destination="@id/loginFragment"
            app:popUpTo="@id/registerFragment"
            app:popUpToInclusive="true"/>
    </fragment>


    <fragment
        android:id="@+id/homeFragment"
        android:name="com.example.studynest.ui.HomeFragment"
        android:label="Home"
        tools:layout="@layout/fragment_home" />

    <fragment
        android:id="@+id/addDisciplineFragment"
        android:name="com.example.studynest.ui.AddDisciplineFragment"
        android:label="Adicionar"
        tools:layout="@layout/fragment_add_discipline" />

    <fragment
        android:id="@+id/searchDisciplineFragment"
        android:name="com.example.studynest.ui.SearchDisciplineFragment"
        android:label="Pesquisar"
        tools:layout="@layout/fragment_search_discipline">

        <action
            android:id="@+id/action_search_to_detail"
            app:destination="@id/disciplineDetailFragment" />
    </fragment>

    <fragment
        android:id="@+id/favoritesFragment"
        android:name="com.example.studynest.ui.FavoritesFragment"
        android:label="Favoritos"
        tools:layout="@layout/fragment_favorites">

        <action
            android:id="@+id/action_favorites_to_detail"
            app:destination="@id/disciplineDetailFragment" />
    </fragment>


    <fragment
        android:id="@+id/disciplineDetailFragment"
        android:name="com.example.studynest.ui.DisciplineDetailFragment"
        android:label="Detalhes da Disciplina"
        tools:layout="@layout/fragment_discipline_detail">

        <argument
            android:name="disciplinaSelecionada"
            app:argType="com.example.studynest.domain.Disciplina" />
        
        <action
            android:id="@+id/action_disciplineDetailFragment_to_addMaterialFragment"
            app:destination="@id/addMaterialFragment" />
    </fragment>

    <fragment
        android:id="@+id/addMaterialFragment"
        android:name="com.example.studynest.ui.AddMaterialFragment"
        android:label="Adicionar Material"
        tools:layout="@layout/fragment_add_material">

        <argument
            android:name="idDisciplina"
            app:argType="string" />
            
    </fragment>

</navigation>